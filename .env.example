# MemeX 合约部署配置示例文件
# 复制此文件为 .env 并填入实际配置值

# =================================
# 🔐 基础账户配置
# =================================
# 部署者私钥 (请勿泄露或提交到版本控制)
PRIVATE_KEY=your_private_key_here

# 合约所有者地址
OWNER_ADDRESS=your_wallet_address_here

# 多签钱包地址 (建议使用)
MULTISIG_WALLET=your_multisig_wallet_address_here

# =================================
# 🌐 网络配置
# =================================

# 选择一个网络配置并取消注释

# Monad 测试网
# RPC_URL=https://testnet-rpc.monad.xyz
# CHAIN_ID=41455

# Monad 主网
# RPC_URL=https://rpc.monad.xyz
# CHAIN_ID=41454

# Ethereum Sepolia 测试网
# RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
# CHAIN_ID=11155111

# Ethereum 主网
# RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
# CHAIN_ID=1

# 本地 Anvil 测试网络 (默认)
RPC_URL=http://localhost:8545
CHAIN_ID=31337

# =================================
# 🔗 代币地址配置
# =================================

# X402 协议配置 (用于支付AI预测服务)
X402_PROTOCOL_ADDRESS=0x1234567890123456789012345678901234567890  # 示例地址
X402_TREASURY_ADDRESS=0xA0b86a33E6441C78A2Ec44c1e5BeD1C71c3a7Ad42

# 支持的代币地址
# ETH 使用 address(0) = 0x0000000000000000000000000000000000000000
ETH_ADDRESS=0x0000000000000000000000000000000000000000

# USDC 地址 (请替换为实际网络上的地址)
USDC_ADDRESS=0xA0b86a33E6441C78A2Ec44c1e5BeD1C71c3a7Ad42

# USDT 地址 (请替换为实际网络上的地址)
USDT_ADDRESS=0xdAC17F958D2ee523a2206206994597C13D831ec7

# =================================
# 📊 价格预言机配置 (Chainlink)
# =================================

# ETH/USD 价格预测
ETH_USD_FEED=0x5f4eC3Df9cbd43714FE2740f5E3616155c5b8419

# USDC/USD 价格预测
USDC_USD_FEED=0xA0b86a33E6441C78A2Ec44c1e5BeD1C71c3a7Ad42

# USDT/USD 价格预测
USDT_USD_FEED=0x3E7d1eAB13ad0104d2750B8863bF913AA4F0A1b2

# 价格预言机心跳时间 (秒)
DEFAULT_HEARTBEAT=3600

# 价格偏差阈值 (基点，100 = 1%)
DEFAULT_DEVIATION_THRESHOLD=500

# =================================
# 🤖 AI 预测服务配置
# =================================

# AI 预言机合约地址 (待部署后更新)
AI_ORACLE_ADDRESS=

# AI 预测服务定价 (通过 X402 协议支付，可以是 USDC、USDT、X402 等代币)
AI_PREDICTION_BASIC_PRICE=10
AI_PREDICTION_PREMIUM_PRICE=50
AI_PREDICTION_BATCH_PRICE=100

# VIP 折扣配置 (基点，1000 = 10%)
VIP_DISCOUNT_RATE=2000

# =================================
# 💰 财库配置
# =================================

# 平台费率 (基点，300 = 3%)
PLATFORM_FEE_RATE=300

# 财库分配比例 (基点，总和为 10000)
PLATFORM_RESERVE_SHARE=3000  # 30%
LIQUIDITY_PROVIDER_SHARE=2500  # 25%
AI_PROVIDER_SHARE=2500     # 25%
TEAM_REWARD_SHARE=1000     # 10%
TREASURY_SHARE=1000        # 10%

# =================================
# ⚠️ 风险管理配置
# =================================

# 最大资金池规模 (wei)
MAX_POOL_SIZE=1000000000000000000000000  # 1M ETH/USDT

# 最大单次下注金额 (wei)
MAX_BET_AMOUNT=10000000000000000000      # 10 ETH/USDT

# 最大用户风险敞口 (wei)
MAX_USER_EXPOSURE=50000000000000000000  # 50 ETH/USDT

# 熔断机制阈值 (wei)
CIRCUIT_BREAKER_THRESHOLD=500000000000000000000  # 500K ETH/USDT

# 最小下注金额 (wei)
MIN_BET_AMOUNT=1000000000000000         # 0.001 ETH/USDT

# 连胜/连败限制
MAX_WINNING_STREAK=10
MAX_LOSING_STREAK=10

# =================================
# 📝 合约验证配置
# =================================

# Etherscan API Key (用于合约验证)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# 自动验证合约 (true/false)
AUTO_VERIFY_CONTRACTS=false

# =================================
# 🛠️ 部署选项
# =================================

# 部署时是否跳过测试 (true/false)
SKIP_TESTS=false

# Gas 价格限制 (gwei)
MAX_GAS_PRICE=100

# Gas 限制
GAS_LIMIT=30000000

# 部署确认次数
CONFIRMATIONS=2

# =================================
# 📊 监控配置
# =================================

# 是否启用部署后监控 (true/false)
ENABLE_POST_DEPLOY_MONITORING=true

# 监控间隔 (秒)
MONITORING_INTERVAL=60

# 警报邮件地址 (可选)
ALERT_EMAIL=

# =================================
# 🔄 升级配置
# =================================

# 时间锁延迟时间 (秒)
TIMELOCK_DELAY=172800  # 48小时

# 是否启用紧急暂停功能 (true/false)
EMERGENCY_PAUSE_ENABLED=true

# 恢复时间延迟 (秒)
UNPAUSE_DELAY=86400  # 24小时

# =================================
# 🔍 调试选项
# =================================

# 详细输出 (true/false)
VERBOSE=true

# 调试模式 (true/false)
DEBUG_MODE=false

# 保存部署日志 (true/false)
SAVE_DEPLOYMENT_LOG=true

# 日志文件路径
DEPLOYMENT_LOG_PATH=./logs/deployment.log